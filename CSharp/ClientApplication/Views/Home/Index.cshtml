@model ClientApplication.Models.User

@{
    ViewBag.Title = "Page de connexion";
}

<link href="@Url.Content("/Content/HomePage.css")" rel="stylesheet" type="text/css" />

<script href="@Url.Content("/Content/HomePage.js")" type="text/javascript"></script>


<div class="row">
    <h1 class="HomePageh1">
        Veuillez vous connectez pour déchiffrer votre fichier !
    </h1>
</div>


@using (Html.BeginForm())
 {
    <div class="row" style="margin-bottom:15px">
        <div class="col-md-3">
        </div>

        <div class="col-md-2 identifiant">
            <label for="pass">Identifiant</label>
        </div>

        <div class="col-md-3">
            @Html.TextBoxFor(m => m.userName)
        </div>

    </div>
    

    <div class="row" style="margin-bottom:15px">
        <div class="col-md-3">
        </div>

        <div class="col-md-2">
            <label for="pass">Mot de passe</label>
        </div>

        <div class="col-md-3 password">
            @Html.TextBoxFor(m => m.password)
        </div>
    </div>

    <div class="row" style="text-align:center">

        <div class="col-md-4">
        </div>

        <div class="col-md-3">
            <input type="submit" value="Connexion" />
        </div>
    </div>
 }





