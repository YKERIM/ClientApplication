@using ClientApplication.Models
@model ClientApplication.Models.User

@{
    ViewBag.Title = "Index";

}
<link href="@Url.Content("/Content/HomePage.css")" rel="stylesheet" type="text/css"/>
<script src="@Url.Content("/Content/HomePage.js")" type="text/javascript"></script>

@{
    var data = ViewBag.Message;
}

<div class="row" id="row_logpage">
    <h1 class="LogPage">
        Veuillez vous connectez pour déchiffrer votre fichier !
    </h1>
</div>

@using (Html.BeginForm())
 {
    <div class="row" style="margin-bottom:15px">
        <div class="col-md-3">
        </div>

        <div class="col-md-2 identifiant">
            <label for="pass">Identifiant</label>
        </div>

        <div class="col-md-3">
            @Html.TextBoxFor(m => m.userName)
        </div>
    </div>


    <div class="row" style="margin-bottom:25px">
        <div class="col-md-3">
        </div>

        <div class="col-md-2">
            <label for="pass">Mot de passe</label>
        </div>

        <div class="col-md-3 password">
            @Html.TextBoxFor(m => m.password)
        </div>
    </div>

    <div class="row" style="text-align:center">
        <div class="col-md-4">
        </div>

        @if (@data != null)
        {
            <div class="col-md-3">
                <input type="submit" value="Connexion" />
                <p id="message_erreur" style="color:red; display:block; margin-top:15px">L'identifiant ou le mot de passe est éronné !</p>
            </div>
        }

        else
        {
            <div class="col-md-3">
                <input type="submit" value="Connexion" />
                <p id="message_erreur" style="color:red; display:none; margin-top:15px">L'identifiant ou le mot de passe est éronné !</p>
            </div>
        }
    </div>
 }